<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.salony.RegisterFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="1">


                        <TextView
                            android:layout_marginBottom="2dp"
                            android:id="@+id/questionTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Question"
                            android:layout_marginTop="30dp"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            />

                        <ImageView
                            android:layout_marginTop="2dp"
                            android:id="@+id/imgView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/logo"
                            android:layout_weight="2.85" />


                    </LinearLayout>

                    <ListView
                        android:layout_marginTop="2dp"
                        android:id="@+id/listView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </ListView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="3dp">


                    <Button
                        android:layout_marginStart="3dp"
                        android:id="@+id/explanationBtn"
                        android:layout_width="270dp"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom"
                        android:text="Learn More"
                        android:onClick="onExp"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:layout_weight="1"

                        android:background="@drawable/buttonshape"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:layout_marginRight="2dp"/>

                    <Button
                        android:id="@+id/nextBtn"
                        android:layout_width="270dp"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom"
                        android:onClick="onNext"
                        android:text="Go"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:layout_weight="1"

                        android:background="@drawable/buttonshape"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:layout_marginLeft="2dp"
                        android:layout_marginEnd="3dp"
                        />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answerAccuracyImageView"
            android:layout_centerInParent="true"
            android:src="@drawable/bronze"
            android:visibility="gone" />
    </RelativeLayout>

</FrameLayout>
