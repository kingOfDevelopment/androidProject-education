<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.salony.RegisterFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/logo"
                        android:layout_marginBottom="2dp"/>
                    <TextView
                        android:id="@+id/resultCon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Congratlation!"
                        android:layout_marginTop="30dp"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:layout_weight="0.51"
                        android:layout_marginBottom="2dp"/>

                    <ImageView
                        android:layout_marginTop="2dp"
                        android:id="@+id/resultImg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/logo"
                        android:layout_marginBottom="2dp"/>


                </LinearLayout>




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <Button
                    android:layout_marginTop="2dp"
                    android:id="@+id/learnBtn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Learn More"
                    android:onClick="onLearn"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/buttonshape"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"/>
                <Button
                    android:layout_marginTop="2dp"
                    android:id="@+id/againBtn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Try Again"
                    android:onClick="onAgain"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/buttonshape"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</FrameLayout>
